[
  { "@method": "physical-attack",
    "args": { "VITRatio":1.0 },
    "code": [
      { "@call": "number.to-string",
        "arguments": {
          "to": { "@var":"ADamage", "as":"string" },
          "value": { "@arg":"ADamage" }
        }
      },
      { "@call": "number.to-string",
        "arguments": {
          "to": { "@var":"STRRatio", "as":"string" },
          "value": { "@arg":"STRRatio" }
        }
      },
      { "@call": "string.format",
        "arguments": {
          "to": { "@var":"fmt", "as":"string" },
          "map": {
            "damage": { "@var":"ADamage" },
            "ratio": { "@var":"STRRatio" },
            "target": { "@arg":"target" }
          },
          "value": "{target}に物理攻撃(威力{damage}x{ratio})します"
        }
      },
      { "@call": "code/text/sentence.put",
        "arguments": {
          "to": { "@var":"st", "as":"code/text/sentence" },
          "text": { "@var":"fmt" },
          "priority": 1000,
          "value": 1000
        }
      },
      { "@call": "array.push",
        "arguments": {
          "to": { "@var":"action" },
          "value": { "@var":"st" }
        }
      },
      { "@call": "code.execute",
        "arguments": {
          "value": { "@arg":"onHit" },
          "args": {
            "player": { "@arg":"player" },
            "target": { "@arg":"target" }
          }
        }
      }
    ]
  },
  { "@method": "buff-physical-attack",
    "args": { "PowerRatio":0.0 }
  },
  { "@method": "magical-attack",
    "args": { "MNDRatio":1.0 },
    "code": [
      { "@call": "number.to-string",
        "arguments": {
          "to": { "@var":"ADamage", "as":"string" },
          "value": { "@arg":"ADamage" }
        }
      },
      { "@call": "number.to-string",
        "arguments": {
          "to": { "@var":"INTRatio", "as":"string" },
          "value": { "@arg":"INTRatio" }
        }
      },
      { "@call": "number.assign",
        "arguments": {
          "to": { "@var":"chainAttack", "as":"number" },
          "value": { "@calc":"@chainAttack + 1" }
        }
      },
      { "@call": "number.to-string",
        "arguments": {
          "to": { "@var":"chain-attack", "as":"string" },
          "value": { "@var":"chainAttack" }
        }
      },
      { "@call": "number.in-range",
        "arguments": {
          "ok": { "@var":"ok-chainAttack", "as":"bool" },
          "more": 1,
          "value": { "@arg":"chainAttack" }
        }
      },
      { "@call": "string.format",
        "arguments": {
          "@hook": ["bool.switch"],
          "switch": {"@var":"ok-chainAttack" },

          "to": { "@var":"chain-attack" },
          "map": {
            "num": { "@var":"chain-attack" }
          },
          "value": "x{num}"
        }
      },
      { "@call": "string.format",
        "arguments": {
          "to": { "@var":"fmt", "as":"string" },
          "map": {
            "damage": { "@var":"ADamage" },
            "ratio": { "@var":"INTRatio" },
            "target": { "@arg":"target" },
            "num": { "@var":"chain-attack" }
          },
          "value": "{target}に魔法攻撃(威力{damage}x{ratio}){num}します"
        }
      },
      { "@call": "code/text/sentence.put",
        "arguments": {
          "to": { "@var":"st", "as":"code/text/sentence" },
          "text": { "@var":"fmt" },
          "priority": 1000,
          "value": 1000
        }
      },
      { "@call": "array.push",
        "arguments": {
          "to": { "@var":"action" },
          "value": { "@var":"st" }
        }
      },
      { "@call": "code.execute",
        "arguments": {
          "value": { "@arg":"onHit" },
          "args": {
            "player": { "@arg":"player" },
            "target": { "@arg":"target" },
            "dice": { "@arg":"dice" }
          }
        }
      }
    ]
  },
  { "@method": "buff-magical-attack",
    "args": { "PowerRatio":0.0 }
  }
]